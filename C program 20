int main() {
    char text[] = "Learning C is fun.\nLearning pointers is more fun.It is good to have pointers.";
    int n_paragraphs, *n_sentences, **n_words;

    char**** document = get_document(text, &n_paragraphs, &n_sentences, &n_words);

    // Example Queries
    char*** para2 = kth_paragraph(document, 2);
    char** sent1_para1 = kth_sentence_in_mth_paragraph(document, 1, 1);
    char* word1_sent1_para1 = kth_word_in_mth_sentence_of_nth_paragraph(document, 1, 1, 1);

    printf("%s\n", sent1_para1[0]);        // First word in first sentence
    printf("%s\n", word1_sent1_para1);    // First word
}
